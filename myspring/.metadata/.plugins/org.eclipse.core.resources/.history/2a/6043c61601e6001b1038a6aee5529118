<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.day.dto.ProductMapper"> <!-- 다른 mappertype 과 구별만 될수 있게 만들자  -->
  <select id="selectByNo" parameterType = "java.lang.String" resultType="com.day.dto.Product"><!-- 소문자 스트링도 가능!	  -->
    select * from product where prod_no = #{aaa}
  </select>
  <select id="selectAll" resultType = "com.day.dto.Product">
    SELECT * FROM Product ORDER BY prod_no ASC	
  </select>
  <select id="selectAllPage" parameterType="java.util.HashMap" resultType = "com.day.dto.Product"><!-- 파라미터가 여러개인경우  -->
SELECT * 
FROM (
    SELECT rownum rn, a.* 
    FROM (
     SELECT *
     FROM product  
     ORDER BY prod_no ASC ) a
)
WHERE rn BETWEEN START_ROW(#{currentPage}, #{cnt_per_page}) AND  
                 END_ROW(#{currentPage},   #{cnt_per_page})  
  </select>
  <select id="selectByName" parameterType="string" resultType = "com.day.dto.Product">
  <!-- SELECT * FROM product where prod_name LIKE #{word} order by prod_no -->
  SELECT * FROM product where prod_name LIKE '%${value}%' order by prod_no
  </select>
</mapper>