<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width = device-width, initial-scale = 1" />
    <title>회원가입</title>
    <style>
      form.signup > label > span::after {
        content: " : ";
      }
      form.signup input:focus {
        background-color: azure;
      }
      form.signup input {
        outline: none;
      }
      input[name="pwd"],
      input.pwd_valid,
      input[name="name"],
      input.baseaddr,
      input[name="addr"] {
        width: 80%;
        padding: 12px 20px;
        margin: 8px 0;
      }
      form.signup button[type="submit"] {
        display: block;
      }
    </style>
    <script>
      $(function () {
        var $id = $('form.signup>label>input[name = "id"]');
        var $btSubmit = $("form>button[type='submit']");
        var $btIdDupchkObj = $("form>button[name='confirm']");
        var $btSearch = $("form>label>button[name='search']");

        $id.focus(function () {
          $btSubmit.hide();
        });

        $btIdDupchkObj.click(function () {
          var idValue = $id.val();
        	/* if ($id.val() == "id9") {
            $btSubmit.show();
          	} */
          	var url = "./iddupchk";
          	$.ajax({
          		url : url,
          		method : 'get',
          		data:{id:idValue},
          		success:function(responseData){
          			if(responseData.trim() == '1'){
          				$btSubmit.show();
          			}else{//이미사용중인 아이디인 경우
          				alert("이미 사용중인 아이디입니다.");
          				$id.focus();
          				$id.select();
          			}
          		}
          	});
        });

        $btSearch.click(function () {
          var url = "./searchzip2.html";
          var name = "searchzip2";
          var option = "width = 300px, height = 500px;";
          win1 = window.open(url, name, option);
        });
        
        $('form.signup').submit(function(){
        	//비밀번호 유효성 검사
        	//name은 서버 전송용, class style과 구분용
        	var $pwd = $('form.signup input[name="pwd"]');
        	var $pwd1 = $('form.signup input.pwd1');
        	consoel.log($pwd);
        	consoel.log($pwd1);
        	if($pwd.val() != $pwd.val()){
        		alert("비밀번호가 다릅니다.");
        		$pwd.focus();
        	}else{
        		var url = './signup';
        		var method = 'post';
        		var data = $('form.signup').serialize();
        		console.log(data);
        		$.ajax({
        			url:url,
        			method:method,
        			data:data,
        			success:function(responseData){
        				 if(responseData.trim() == '1'){
        					 alert("가입성공")
        					 location.href = "./";
        				 }else{//실패
        					 alert("가입실패");
        				 }
        			}, error:function(xhr){
        				alert("ERROR:"+xhr.status);
        			}
        		});
        	}
        	return false;
        });
      });
    </script>
  </head>
  <body>
    <form class="signup" method="POST" >
      <label>
        <span>ID</span>
        <input
          type="text"
          name="id"
          required
          placeholder="아이디를 입력하세요"
        />
      </label>
      <button type="button" name="confirm">아이디 중복 확인</button><br />
      <label>
        <span>비밀번호</span>
        <input type="password" name="pwd" required /> </label
      ><br />
      <label>
        <span>비밀번호1</span>
        <input type="password_valid" class="pwd1" required /> </label
      ><br />
      <label>
        <span>이름</span>
        <input
          type="text"
          name="name"
          required
          placeholder="이름을 입력하세요"
        /> </label
      ><br />
      <label>
        <span>주소</span>
        <input type="text" name="name" readonly maxlength="5" class="zipcode" />
        <button type="button" name="search">우편번호 검색</button><br />
        <input type="text" size="30" readonly class="baseaddr" /><br />
        <input type="text" size="30" name="addr" /><br />
      </label>
      <button type="submit">가입</button>
    </form>
  </body>
</html>
